@page
@model viewallproductsModel
@{
}

<h1> Retornando todos os produtos </h1>
<hr />

<h2>Listando Produtos</h2>
<hr />
<table class="table table-striped table-bordered">
	<thead>
		<tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Short description</th>
		</tr>
	</thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/images/menu/@item.ImageFileName" /></td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.ShortDescription</td>
                <td>
                    <a asp-page="EditProduct" asp-route-id="@item.Id">edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
